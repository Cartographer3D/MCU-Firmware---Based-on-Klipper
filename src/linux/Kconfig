# Kconfig settings for compiling and running the micro-controller code
# in a Linux process

if MACH_LINUX

config LINUX_SELECT
    bool
    default y
    select HAVE_GPIO_ADC
    select HAVE_GPIO_SPI
    select HAVE_GPIO_HARD_PWM
    select HAVE_GPIO_I2C
    select HAVE_GPIO_BITBANGING
    select HAVE_GPIO

config BOARD_DIRECTORY
    string
    default "linux"

config CLOCK_FREQ
    int
    default 50000000


choice
    prompt "Processor model"
    depends on LOW_LEVEL_OPTIONS
    config MACH_LINUX_GENERIC
        bool "Generic Linux"


    # For naming conventions see https://github.com/raspberrypi/linux/issues/22
    config MACH_LINUX_BCM2709
        bool "Raspberry Pi 2/3"
    config MACH_LINUX_BCM2711
        bool "Raspberry Pi 4"
endchoice

#config LINUX_GPIO_IMPLEMENTATION
#    string
#    default "gpio_generic.c"
#    depends on MACH_LINUX_GENERIC

#config LINUX_GPIO_IMPLEMENTATION
#    string
#    default "gpio_bcm.c"
#    depends on MACH_LINUX_BCM2709 || MACH_LINUX_BCM2711

endif
