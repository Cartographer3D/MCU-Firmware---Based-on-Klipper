# Test case for soft pwm
CONFIG soft_pwm.cfg
DICTIONARY lpc176x.dict

# Test basic on off
SET_PIN PIN=pwm_pin VALUE=0
SET_PIN PIN=pwm_pin VALUE=0.5
SET_PIN PIN=pwm_pin VALUE=1

# Test cycle time
SET_PIN PIN=pwm_pin VALUE=0 CYCLE_TIME=0.1
SET_PIN PIN=pwm_pin VALUE=1 CYCLE_TIME=0.5
SET_PIN PIN=pwm_pin VALUE=0.5 CYCLE_TIME=0.001
SET_PIN PIN=pwm_pin VALUE=0.75 CYCLE_TIME=0.01
SET_PIN PIN=pwm_pin VALUE=0.5 CYCLE_TIME=1

# Test duplicate values
SET_PIN PIN=pwm_pin VALUE=0.5 CYCLE_TIME=0.5
SET_PIN PIN=pwm_pin VALUE=0.5 CYCLE_TIME=0.5
SET_PIN PIN=pwm_pin VALUE=0.75 CYCLE_TIME=0.5
SET_PIN PIN=pwm_pin VALUE=0.75 CYCLE_TIME=0.75